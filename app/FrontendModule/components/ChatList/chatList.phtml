
<div id="chat" class="list">
{if Environment::getUser()->isLoggedIn()}
    <div id="chat-form">
	{widget chatForm}
    </div>
{/if}
    
{foreach $posts AS $post}
    <div class="chat-item">
	<h3>
	    {$post['team_name']} <span class="pull-right small">{$post['inserted']|time}</span>
	</h3>
	<div>{$post['content']}</div>
    </div>
{/foreach}
</div>

{widget paginator}