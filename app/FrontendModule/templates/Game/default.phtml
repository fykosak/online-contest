{extends layout.phtml}

{block #subcontent}

{*{cache "problems/$id_team", "problems"}*}


{if $lang == 'cs'}
<p><b>Věnujte prosím pár minut vyplnění <a href="https://docs.google.com/spreadsheet/viewform?formkey=dHV5SmZ2NnRBWGxxYVJvRVprVEhIdXc6MA">ankety</a> o letšním FoLu.</b></p>
{else}
<p><b>Please, spend few moments with filling our <a href="https://docs.google.com/spreadsheet/viewform?formkey=dDVnMVRIRzlYUUNWQkdOQ2NOQ2dOenc6MA">exit poll</a>.</b></p>
{/if}


<p>{_'K dispozici máte zadání těchto úloh dle podmínek v zadání:'}</p>

<h3>{_'Nevyřešené'}</h3>
{if count($unsolvedTasks) == 0}
<p>{_'Žádné úlohy.'}</p>
{else}
<ul>
    {foreach $unsolvedTasks as $task}
    {block task}
    <li><del n:tag-if="$task->cancelled == 1" title="{_'Zrušená úloha'}"><strong>{$task->code_name}</strong>&nbsp;{$task|i18n:'name',$lang} ({$task->points} {_'b.'})</del>
        <ul><li>
            {foreach $mirrors as $mirror}
            <a href="{$mirror}{$task|i18n:'filename',$lang}">Mirror {$iterator->getCounter()}</a>{if !$iterator->isLast()}, {/if}
            {/foreach}
            </li>
        </ul>
    </li>
    {/block}
    {/foreach}
</ul>
{/if}

<h3>{_'Vyřešené'}</h3>
{if count($solvedTasks) == 0}
<p>{_'Žádné úlohy.'}</p>
{else}
<ul>
    {foreach $solvedTasks as $task}
    {include #task}
    {/foreach}
</ul>
{/if}

<h3>{_'Přeskočené'}</h3>
{if count($skippedTasks) == 0}
<p>{_'Žádné úlohy.'}</p>
{else}
<ul>
    {foreach $skippedTasks as $task}
    {include #task}
    {/foreach}
</ul>
{/if}
{*{/cache}*}

{include @info.$lang.phtml}

{/block}
